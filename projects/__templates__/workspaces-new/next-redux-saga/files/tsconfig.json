{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "paths": {
      "@lib/*": ["projects/<%= packageName %>/lib/*"],
      "@locale/*": ["projects/<%= packageName %>/locale/*"],
      "@redux/*": ["projects/<%= packageName %>/lib/redux/*"],
      "@containers/*": ["projects/<%= packageName %>/containers/*"],
      "@pagesImpl/*": ["projects/<%= packageName %>/pagesImpl/*"],
      "@pages/*": ["projects/<%= packageName %>/pages/*"]
    },
    "jsx": "preserve",
    "noEmit": true,
    "allowJs": true
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"]
}
