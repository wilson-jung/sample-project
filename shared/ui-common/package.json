{
  "name": "@dragonball-shared/ui-common",
  "version": "0.0.1",
  "main": "./src/index.ts",
  "publishConfig": {
    "access": "public",
    "source": "./src/index.ts",
    "main": "./dist/index.js",
    "module": "./dist/index.module.js",
    "exports": "./dist/index.module.js",
    "types": "./dist/index.d.ts"
  },
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "yarn clean && microbundle build --jsx jsx --jsxImportSource react --globals react/jsx-runtime=jsx --compress -f esm,cjs",
    "dev": "yarn clean && microbundle watch --jsx jsx --jsxImportSource react --globals react/jsx-runtime=jsx --compress -f esm",
    "clean": "rm -rf ./dist",
    "prepublishOnly": "yarn build",
    "test": "yarn build",
    "type-check": "tsc --noemit"
  },
  "peerDependencies": {
    "@babel/runtime": "*",
    "@emotion/react": "^11.4.0",
    "@emotion/styled": "^11.3.0"
  },
  "devDependencies": {
    "@dragonball-shared/proto": "workspace:shared/proto",
    "@emotion/react": "^11.4.0",
    "@emotion/styled": "^11.3.0",
    "@types/lodash": "^4",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.2",
    "@types/react-lottie": "^1.2.6",
    "microbundle": "^0.13.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "typescript": "^4.3.4"
  }
}
